<!DOCTYPE html>
<html lang="ru">
<head>
    <link rel="stylesheet" href="/css/LilacMainBootstrap5.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/codemirror/6.65.7/codemirror.min.css"></link>
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/codemirror/6.65.7/theme/abbott.min.css"></link>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nuclear IDE</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://code.jquery.com/ui/1.13.1/jquery-ui.min.js"></script>
    <script src="client.js"></script>
    <script language="javascript" type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/codemirror/6.65.7/codemirror.min.js"></script>
    <script language="javascript" type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/codemirror/6.65.7/mode/perl/perl.min.js"></script>
</head>

<body>
<!-- Модальное окно для SIGN IN / SIGN UP -->
<div class="modal fade" id="zatemnenie2" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content authentication">
        <div class="modal-header">
          <h5 class="modal-title" id="modalLabel">Аутентификация</h5>
          <button type="button" class="btn-close close-red" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <ul class="nav nav-tabs" role="tablist">
            <li class="nav-item" role="presentation">
              <button class="nav-link active" id="login-tab" data-bs-toggle="tab" data-bs-target="#login" type="button" role="tab" aria-controls="login" aria-selected="true">Login</button>
            </li>
            <li class="nav-item" role="presentation">
              <button class="nav-link" id="register-tab" data-bs-toggle="tab" data-bs-target="#register" type="button" role="tab" aria-controls="register" aria-selected="false">Register</button>
            </li>
          </ul>
          <div class="tab-content">
            <div class="tab-pane fade" id="register" role="tabpanel" aria-labelledby="register-tab">
                <!-- Форма для регистрации -->
                <form method='post' class="js-form" name="js-form">
                  <div class="mb-3">
                    <label for="name" class="form-label">Никнейм</label>
                    <input name='login' type="login" class="form-control js-input" required>
                  </div>
                  <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input name="email" type="e-mail" class="form-control js-input js-input-email" id="email" aria-describedby="emailHelp" required>
                  </div>
                  <div class="mb-3">
                    <label for="password" class="form-label">Пароль (минимум одна цифра, одна строчная и заглавная латинские буквы)</label>
                    <input name="passwordValidation" type="password" class="form-control js-input" id="password" required>
                  </div>
                  <div class="mb-3">
                    <label for="password" class="form-label">Пароль (повторно)</label>
                    <input name="passwordAgain" type="password" class="form-control" id="password" required>
                  </div>
                  <button type="submit" class="btn btn-primary submit11">Зарегистрироваться</button>
                </form>
              </div>

            <div class="tab-pane fade show active" id="login" role="tabpanel" aria-labelledby="login-tab">
              <!-- Форма для входа -->
              <form method='post' id="formAuthorization" class="js-form" name="js-form">
                <div class="mb-3">
                  <label for="name" class="form-label">Никнейм</label>
                  <input name="username" type="login" class="form-control js-input" aria-describedby="emailHelp" required>
                </div>
                <div class="mb-3">
                  <label for="password" class="form-label">Пароль</label>
                  <input name="password" type="password" class="form-control js-input" required>
                </div>
                <button type="submit" id="buttonAuthorization" class="btn btn-primary submit22">Войти</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>


    <!-- Модальное окно настроек -->
    <div class="modal fade" id="zatemnenie3" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content settings">
          <div class="modal-header">
            <h5 class="modal-title" id="modalLabel">Настройки</h5>
            <button type="button" class="btn-close close-red" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <div class="mb-3">
              <label for="color-theme" class="form-label">Цветовая тема:</label>
              <select class="form-select" id="color-theme" name="Color Theme">
                <option>Войдите в аккаунт, чтобы начать использовать</option>
              </select>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Модальное окно "Notes" -->
<div class="modal" id="zatemnenie4" tabindex="-1" aria-labelledby="notesModalLabel" aria-hidden="true" data-bs-backdrop="false" data-bs-draggable="true">
  <div class="modal-dialog">
    <div class="modal-content notes">
      <div class="modal-header">
        <h5 class="modal-title" id="notesModalLabel">Блокнот</h5>
        <button type="button" class="btn-close close-red" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <textarea class="form-control" readonly id="NotesTextarea">Войдите, чтобы начать начать использовать.</textarea>
      </div>
    </div>
  </div>
</div>



    <header class="container-fluid py-1">
        <div class="container">
          <div class="d-flex justify-content-between align-items-center">
            <h1 class="mb-0">NUCLEAR</h1>
            <div class="SIGN">
              <a href="#zatemnenie2" data-bs-toggle="modal" class="btn btn-primary">Войти / Зарегистрироваться</a>
            </div>
          </div>
        </div>
      </header>


      <main class="container-fluid py-0">
        <div class="row">

          <div class="col-md-1 sidebuttons-container">
            <div class="mb-3">
              <div class="headerTextSideButtons"></div>
              <div class="buttons-container">
                <a id="buttonCreateFile" class="btn btn-outline-primary mb-2 d-block"><i class="fa-solid fa-folder-plus fa-3x"></i></a>
                <a id="buttonNotesIcon" href="#zatemnenie4" data-bs-toggle="modal" class="btn btn-outline-primary mb-2 d-block"><i class="fa-regular fa-clipboard fa-3x"></i></a>
                <a id="buttonSettingsIcon" href="#zatemnenie3" data-bs-toggle="modal" class="btn btn-outline-primary mb-2 d-block"><i class="fa-solid fa-screwdriver-wrench fa-3x"></i></a>
              </div>
            </div>
          </div>

          <div class="col-md-2">
            <div class="MyFiles">
                <h3 class="d-inline-block">Мои файлы:  </h3>
                <div>
                  <button id="SaveButton" type="submit" class="btn btn-outline-primary"><i class="fa-solid fa-floppy-disk"></i></button>
                  <button id="DeleteButton" type="submit" class="btn btn-outline-primary"><i class="fa-solid fa-trash-can"></i></button>
                  <button id="RenameButton" type="submit" class="btn btn-outline-primary"><i class="fa-solid fa-pencil"></i></button>
                </div>
            </div>
            <div id="files">
              <div id="firstCreatedFile" class="new-element-class">
                <p>Войдите, чтобы начать работу с файлами</p>
              </div>
            </div>
          </div>

          <div class="col-md-5">
            <!-- <pre id="highlighting" class="code">
              <div id="highlighted-code"></div>
              <textarea id="code" name="code" class="code"></textarea>
            </pre> -->
            <textarea id="code" name="code" class="form-control mb-3 code" readonly rows="10">Войдите, чтобы начать использовать</textarea>
          </div>

          <div class="col-md-4">
            <div class="console-container">
              <div class="header-console d-flex justify-content-between align-items-center">
                <button id="RUN" class="btn btn-success RUN"><i class="fa-solid fa-play"></i></button>
                <span class="Console">Консоль</span>
              </div>

              <textarea id="output-textarea" class="form-control console" readonly rows="5"></textarea>
            </div>
          </div>
        </div>
      </main>


      <footer class="footer fixed-bottom py-2 mt-auto">
        <div class="container">
          <div class="text-center">
            <a href="https://github.com/sanchoouse1" target="_blank"><i class="fa-brands fa-2x fa-github"></i></a>
          </div>
        </div>
      </footer>


      <script>
        $(document).ready(function() {
          $('#zatemnenie4').on('shown.bs.modal', function() {
            $(this).draggable({
              handle: '.modal-header' // Элемент, за который можно перетаскивать модальное окно
            });
          });
        });
      </script>  
    <script src="https://kit.fontawesome.com/3c9b0f4f75.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
